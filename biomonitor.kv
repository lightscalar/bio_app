<AnnotateScreen>:
    name: 'annotate_screen'
    annotation_list: annotation_list
    description: description
    on_enter: description.focus = True
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: 20
        BoxLayout:
            size_hint: 0.25, 0.05
            Label:
                color: app.session_color
                text: '{}'.format(app.session_name)
                text_size: self.size
                halign: 'left'
                bold: True
        BoxLayout:
            spacing: 20
            size_hint: 1, 0.12
            orientation: 'horizontal'
            Button:
                size_hint: 0.25, 1
                text: 'Home'
                background_normal: ''
                background_color: (0.188, 0.333, 0.502, 1)
                bold: True
                on_press:
                    root.manager.current = 'menu_screen'
            Button:
                size_hint: 0.25, 1
                text: 'PZT'
                background_normal: ''
                background_color: (0.188, 0.333, 0.502, 1)
                bold: True
                on_press:
                    root.manager.current = 'piezo_screen'
            Button:
                size_hint: 0.25, 1
                text: 'PPG'
                background_normal: ''
                background_color: (0.188, 0.333, 0.502, 1)
                bold: True
                on_press:
                    root.manager.current = 'ppg_screen'
            Button:
                size_hint: 1, 1
                text: '+ Add Annotation'
                background_normal: ''
                background_color: (0.188, 0.188, 0.188, 1)
                bold: True
                on_press:
                    annotation = {}
                    annotation['description'] = description.text
                    annotation['value'] = value.text
                    annotation['units'] = units.text
                    if app.session is None: Factory.MyPopup().open()
                    app.add_annotation(annotation)
                    description.text = ''
                    value.text = ''
                    units.text = ''
                    description.focus = True
        BoxLayout:
            spacing: 20
            size_hint: 1, 0.15
            TextInput:
                id: description
                padding: 20
                size_hint: 0.4, 1
                hint_text: 'Description'
                multiline: False
                write_tab: False
            TextInput:
                id: value
                annotation: ''
                padding: 20
                size_hint: 0.4, 1
                hint_text: 'Value'
                multiline: False
                write_tab: False
                on_text_validate:
                    annotation = {}
                    annotation['description'] = description.text
                    annotation['value'] = value.text
                    annotation['units'] = units.text
                    if app.session is None: Factory.MyPopup().open()
                    app.add_annotation(annotation)
                    description.text = ''
                    value.text = ''
                    units.text = ''
                    description.focus = True
            TextInput:
                id: units
                padding: 20
                annotation: ''
                size_hint: 0.2, 1
                hint_text: 'Units'
                multiline: False
                write_tab: False
                on_text_validate:
                    annotation = {}
                    annotation['description'] = description.text
                    annotation['value'] = value.text
                    annotation['units'] = units.text
                    if app.session is None: Factory.MyPopup().open()
                    app.add_annotation(annotation)
                    description.text = ''
                    value.text = ''
                    units.text = ''
                    description.focus = True
        AnnotationList:
            id: annotation_list
            viewclass: 'AnnotationView'
            size_hint: 1, 0.90
            RecycleBoxLayout:
                spacing: 25
                size_hint: 1, 1
                default_size: None, dp(56)
                default_size_hint: 1.0, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
